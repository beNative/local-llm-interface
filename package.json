{
  "name": "local-llm-interface",
  "version": "1.11.0",
  "description": "An interface to chat with locally installed LLMs serviced through Ollama or LMStudio. This Electron app allows configuration of the service endpoint and provides an overview of available models.",
  "main": "dist/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "node esbuild.config.js",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^0.15.0",
    "@heroicons/react": "^2.1.5",
    "diff-match-patch": "^1.0.5",
    "lucide-react": "^0.417.0",
    "pyodide": "^0.26.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "react-icons": "^5.2.1",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@types/diff-match-patch": "^1.0.36",
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.0",
    "fs-extra": "^11.2.0",
    "typescript": "^5.5.3"
  },
  "build": {
    "appId": "com.localllm.interface",
    "productName": "Local LLM Interface",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}